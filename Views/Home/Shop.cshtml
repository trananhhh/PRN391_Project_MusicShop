@model IEnumerable<Project_MusicShop.Models.Album>
@*@genres IEnumerable<Project_MusicShop.Models.Genre>*@


<section class="cat_product_area ">
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-9">

                <div class="latest_product_inner">
                    <div class="row">

                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="single-product">
                                    <div class="product-img">
                                        <img class="card-img" src="@item.AlbumUrl" alt="" />
                                        <div class="p_icon">
                                            <a href="#">
                                                <i class="ti-eye"></i>
                                            </a>
                                            <a href="#">
                                                <i class="ti-shopping-cart"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="product-btm">
                                        <a href="#" class="d-block">
                                            <h4>@item.Title</h4>
                                        </a>
                                        <div class="mt-3">
                                            @{
                                                double prevPrice = @item.Price * 120 / 100;
                                            }
                                            <span class="mr-4">$@item.Price</span>
                                            <del>$@prevPrice</del>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="left_sidebar_area">
                    <aside class="left_widgets p_filter_widgets">
                        <div class="l_w_title">
                            <h3>Genre</h3>
                        </div>
                        <div class="widgets_inner">
                            <ul class="list">
                                <li>
                                    <a href="#">Frozen Fish</a>
                                </li>
                                <li>
                                    <a href="#">Dried Fish</a>
                                </li>
                                <li>
                                    <a href="#">Fresh Fish</a>
                                </li>
                                <li>
                                    <a href="#">Meat Alternatives</a>
                                </li>
                                <li>
                                    <a href="#">Fresh Fish</a>
                                </li>
                                <li>
                                    <a href="#">Meat Alternatives</a>
                                </li>
                                <li>
                                    <a href="#">Meat</a>
                                </li>
                            </ul>
                        </div>
                    </aside>

                    <aside class="left_widgets p_filter_widgets">
                        <div class="l_w_title">
                            <h3>Artist</h3>
                        </div>
                        <div class="widgets_inner">
                            <ul class="list">
                                <li>
                                    <a href="#">Apple</a>
                                </li>
                                <li>
                                    <a href="#">Asus</a>
                                </li>
                                <li class="active">
                                    <a href="#">Gionee</a>
                                </li>
                                <li>
                                    <a href="#">Micromax</a>
                                </li>
                                <li>
                                    <a href="#">Samsung</a>
                                </li>
                            </ul>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>